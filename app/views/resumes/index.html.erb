<div class="container">
  <h1>Your Applications</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Position</th>
        <th>Applicant Name</th>
        <th>Email</th>
        <th>Date Submitted</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <% order.listings.each do |listing| %>
        <tr>
          <td><%= link_to listing.title, listing_path(listing) %></td>
          <td><%= find_applicant_name(order.user_id) %></td>
          <td><%= find_applicant_email(order.user_id)%></td>
          <td><%= order.created_at.strftime('%b %d, %Y, %I:%M')%></td>
      <% end %>
        </tr>
    <% end %>
   </tbody>
  </table>
  </ul>
</div>
