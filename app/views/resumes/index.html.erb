<div class="container">
  <h1>Your Applications</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Position</th>
        <th>Applicant Name</th>
        <th>Date Submitted</th>
        <th>Resume</th>
      </tr>
    </thead>
    <tbody>
    <% @orders.each do |order| %>
      <% order.listings.each do |listing| %>

        <tr>
          <td><%= listing.title %></td>
          <td><%= find_applicant_name(order.user_id) %></td>
          <td><%= order.created_at.strftime('%b %d, %Y, %I:%M')%></td>
          <td><%= link_to "Download Resume", (find_order_resume(order.user_id)).attachment_url %></td>
        </tr>
      <% end %>
    <% end %>
   </tbody>
  </table>
  </ul>
</div>
