<%= form_for @listing, :html => {:id => 'new_listing_form', :class => 'form-horizontal b'} do |f| %>
  <div class="form-group">
    <div class='col-lg-2'>
      <%= f.label :title, :class => 'control-label', :id => 'text_left'%>
      <div class='field_examples'>i.e. Development Project Manger</div>
    </div>
    <div class="col-lg-10 col-md-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-lg-2'>
      <%= f.label :description, :class => 'control-label', :id => 'text_left' %>
      <div class='field_examples'>
        List of Job Requirements, Previous Experience, Daily Job Responsibilities
      </div>
    </div>
    <div class="col-lg-10">
      <%= f.text_area :description, :class => 'form-control', :rows => '14' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-lg-2'>
      <%= f.label :categories, :class => 'control-label', :id => 'text_left'  %>
      <div class='field_examples'>
        Select at least one category, for multiple catgories hold the command key
      </div>
    </div>
    <div class="col-lg-10 multiple_select_padding">
      <%= f.select(:categories, options_from_collection_for_select(Category.all,
      'title', 'title', @listing.categories.pluck(:title)),
      {}, {multiple: true, size: Category.all.count, :class => 'form-control'}) %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-lg-2'>
      <%= f.label :pay_rate, :class => 'control-label', :id => 'text_left' %>
      <div class='field_examples'>
        40,000 / yr or 20 / hr
      </div>
    </div>
    <div class='col-lg-10'>
      <%= f.text_field :pay_rate, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :number_of_positions, :class => 'control-label col-lg-2', :id => 'text_left' %>
    <div class='col-lg-10 dropdown_padding'>
      <%= f.select :number_of_positions, (1..20).to_a %>
    </div>
  </div>

  <div class="form-group col-lg-12">
    <div class='col-lg-2'>
      <%= f.label :part_time, :class => 'control-label', :id=> 'text_left' %>
      <%= f.radio_button(:employment_type, "part-time", :id => 'part-time',
      :checked => (:employment_type == 'part-time')? true:false) %>
    </div>
    <div class='col-lg-2'>
      <%= f.label :full_time, :class => 'control-label radio_button_padding' %>
      <%= f.radio_button(:employment_type, "full-time", :id => 'full-time',
      :checked => (:employment_type == 'full-time')? true:false) %>
    </div>
  </div>

  <div class="form-group col-lg-12">
    <%= f.label :public_until_this_date, :id => 'closing', :class => 'select_special_padding' %>
    <%= f.datetime_select :closing_date, :ampm => true, :minute_step => 15, :class => 'form-control ' %>
  </div>

  <div class="form-group col-lg-12">
      <%= f.submit "Create Listing", :class => "btn btn-primary btn-lg" %>
  </div>
<% end %>
