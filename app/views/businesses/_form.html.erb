<style>
  #closing{
    display: block;
    margin-top: 20px;
    margin-left: 20px;
  }
</style>

<%= form_for @listing do |f| %>
  <h2>New Job Listing</h2>
  <%= f.label :title, :class => 'control_label' %>
  <%= f.text_field :title, :class => 'text_field' %>

  <%= f.label :description, :class => 'control_label' %>
  <%= f.text_field :description, :class => 'text_field' %>

  <%= f.label :pay_rate, :class => 'control_label' %>
  <%= f.text_field :pay_rate,:class => 'text_field' %>


  <%= f.label :part_time, :class => 'control_label' %>
  <%= f.radio_button(:employment_type, "part-time", :id => 'part-time',
  :checked => (:employment_type == 'part-time')? true:false) %>
  <%= f.label :full_time, :class => 'control_label' %>
  <%= f.radio_button(:employment_type, "full-time", :id => 'full-time',
  :checked => (:employment_type == 'full-time')? true:false) %>

  <%= f.label :closing, :id => 'closing' %>
  <%= f.datetime_select :closing, :ampm => true, :minute_step => 15%>

  <%= f.submit %>

<% end %>
