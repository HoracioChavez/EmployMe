<% if notice %>
  <%= notice %>
<% end %>

<% @cart.cart_listings.each do |cart_listing| %>
  <%= link_to cart_listing.listing.title, listing_path(cart_listing.listing) %>
  <%= form_for cart_listing, :url => cart_listing_path(id: cart_listing), method: :patch do |f| %>
    <%= submit_tag "save" %>
  <% end %>

  <%= button_to 'Remove From Cart', cart_listing ,method: :delete %>
<% end %>

<%= button_to 'Empty Cart', @cart, method: :delete %>
