<div class="em-top-navbar">
  <% if signed_in? %>
    <div class="container em-element">
      <%= link_to "EmployMe!",
          root_path,
          {class:"em-top-brand em-f",
           style:"color:orange"}
      %>
      <div class="em-right col-md-8">
        <%= link_to "Jobs",
          listings_path,
          {class: "em-top-links em-f col-md-offset-4",
           style: "color:white"}
        %>
        <%= link_to "Hello #{current_user.first_name.capitalize}",
            current_user,
            {class: "em-top-links em-f col-md-offset-2",
             style: "color:white",
             id: "dashboard"}
        %>
        <%= link_to "Sign Out",
            signout_path,
            {class:"em-top-links em-f col-md-offset-2",
             style:"color:white"}
        %>
      </div>
    </div>
    <% if @cart.listings.count > 0 %>
      <div class="em-sub-top-navbar" style="margin-top:-0px">
        <p class="text-center em-f">
          <%= link_to "You have #{@cart.listings.count} job(s) ready to apply",
              cart_path,
              {id: "your_jobs_link"}
          %>
        </p>
      </div>
    <% end %>
  <% else %>
    <div class="container em-element">
      <%= link_to "EmployMe!",
          root_path,
          {class:"em-top-brand em-f",
           style:"color:orange"}
      %>
      <div class="em-right col-md-8">

        <%= link_to "Jobs",
          listings_path,
          {class: "em-top-links em-f col-md-offset-4",
           style: "color:white"}
        %>
        <%= link_to "Register Now",
            new_user_path,
            {class: "em-top-links em-f col-md-offset-2",
             style: "color:white"}
        %>
        <%= link_to "Sign In",
            signin_path,
            {class:"em-top-links em-f col-md-offset-2 ",
             style:"color:white"}
        %>
      </div>
    </div>
    <% if @cart.listings.count > 0 %>
      <div class="em-sub-top-navbar">
        <p class="text-center em-f">
          <%= link_to "You have #{@cart.listings.count} job(s) ready to apply",
              cart_path,
              {id: "your_jobs_link"}
          %>
        </p>
      </div>
    <% end %>
  <% end %>

</div>
