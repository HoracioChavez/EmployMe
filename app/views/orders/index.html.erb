<div class="container">
  <h1>Your Previous Applications</h1>
  <table class="table table-hover">
    <thead>
      <th>Company</th>
      <th>Title</th>
      <th>Description</th>
      <th class="col-md-2">Applied On</th>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <% order.listings.each do |listing| %>
          <tr>
            <td><%= listing.creator.company_name %></td>
            <td><%= link_to listing.title, listing_path(listing) %></td>
            <td><%= truncate(listing.description, :length => 250) %></td>
            <td><%= order.created_at.strftime('%b %d, %Y') %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
